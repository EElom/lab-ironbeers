<h1>Random beer</h1>
<section>
    {{#each randomBeer}}
        {{> randomPartial this}}
        <div class="beer">
            {{#if this.image_url}}
                <img src="{{ this.image_url }}" alt="{{ this.tagline }}" class="align-self-center" />
            {{/if}}
            <div class="beer-inner">   
                <h3 class="mt-0">
                    <a href="/beer/{{ this.id }}">{{ this.name }}</a></a>
                </h3>

                <h5> {{this.tagline }}</h5>
                <p> {{ this.description }} </p>
        </div>
    </div>
    {{/each}}

    <div class="buttons">
        <a class="btn btn-primary button-margin" href="/random-beer">Choose another beer </a></a>
    </div>

</section>